<?xml version="1.0"?>
<ruleset name="ASV">
    <rule ref="./vendor/ninjify/coding-standard/ruleset.xml">
        <exclude name="Squiz.Commenting.FunctionComment.InvalidTypeHint"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.Indent"/>
        <exclude name="SlevomatCodingStandard.ControlStructures.RequireTernaryOperator"/>
        <exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect"/>
        <exclude name="Generic.WhiteSpace.ScopeIndent.IncorrectExact"/>
        <exclude name="Squiz.WhiteSpace.FunctionSpacing.Before"/>
        <exclude name="PSR2"/>
        <exclude name="PEAR"/>
    </rule>
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="app" value="App"/>
                <element key="app/model" value="App\Model"/>
                <element key="app/domain" value="App\Domain"/>
                <element key="app/ui" value="App\UI"/>
                <element key="app/module" value="App\Module"/>
                <element key="app/presenters" value="App\Presenters"/>
            </property>
        </properties>
    </rule>
    <rule ref="SlevomatCodingStandard.Classes.UnusedPrivateElements">
        <properties>
            <property name="alwaysUsedPropertiesAnnotations" type="array" value="
                @ORM\Column
            "/>
        </properties>
    </rule>
    <arg name="tab-width" value="2"/>
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <exclude-pattern>/app/Kernel.php</exclude-pattern>
    <exclude-pattern>/tests/tmp</exclude-pattern>
    <exclude-pattern>*.phtml</exclude-pattern>
</ruleset>
